<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui_Shopping_APP.ViewModels"
             x:Class="Maui_Shopping_APP.Views.MainPage"
             Title="Feel Good, Shop Better"
             Shell.TitleColor="Black"
             Shell.NavBarHasShadow="True"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto" Padding="20">
        <Image Grid.Row="0"
               Source="scanhome.png"
               HeightRequest="200"
               WidthRequest="200"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="20">
            <Button Grid.Column="0"
                    Text="ADD ITEMS"
                    Clicked="OnScanBarcodeClicked"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontAttributes="Bold"/>

            <Button Grid.Column="1"
                    Text="VIEW CART"
                    Clicked="OnCartClicked"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    FontAttributes="Bold"/>
        </Grid>
    </Grid>

</ContentPage>
